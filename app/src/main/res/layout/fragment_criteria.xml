<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:background="#121212"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.CriteriaFragment">

    <ImageView
        android:id="@+id/drinkImage"
        android:layout_width="181dp"
        android:layout_height="119dp"
        android:src="@drawable/drinks"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:textStyle="bold|italic"
        android:textColor="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:text="Let's drink?"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/drinkImage"
        app:layout_constraintEnd_toEndOf="@+id/drinkImage"
        app:layout_constraintStart_toStartOf="@+id/drinkImage" />

    <Switch
        android:fitsSystemWindows="true"
        android:switchPadding="10dp"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:text="Let's PARTY! (Alcoholic drinks)"
        android:textColor="@color/colorAccent"
        android:background="@android:color/transparent"
        android:id="@+id/switchAlcoholicOrNot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/drinkImage" />

</androidx.constraintlayout.widget.ConstraintLayout>